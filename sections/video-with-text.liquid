{{ 'video-section.css' | asset_url | stylesheet_tag }}
<noscript>{{ 'video-section.css' | asset_url | stylesheet_tag }}</noscript>
<div class="section-{{ section.id }}-padding">
    <div class="wbvidewithtxt color-{{ section.settings.color_scheme }} gradient">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-12 video-text-{{ section.id }}">
                {% if section.blocks.size > 0 %}
                    {% for block in section.blocks %}
                        {% case block.type %}
                            {%- when 'heading' -%}
                            <h2>{{ block.settings.storytitle }}</h2>

                            {%- when 'caption' -%}
                            <div class="img_subdesc"><p>{{ block.settings.storysubtitle }}</p></div>

                            {%- when 'button' -%}
                            {% if block.settings.link != blank %}
                                <a href="{{ block.settings.link }}" class="button button--secondary gradient"><span>{{ block.settings.btntxt }}</span>{% render 'icon-arrow' %}</a>
                            {% endif %}

                        {%- endcase -%}
                    {% endfor %}
                {% endif %}
            </div>
            <div class="col-md-6 col-sm-6 col-12"> 
                <deferred-media class="video-section__media deferred-media no-js-hidden gradient global-media-settings{% if section.settings.full_width %} global-media-settings--full-width{% endif %} {% if section.settings.videosource %} wbvideosrc {% endif %}" data-media-id="{{ section.settings.video_url.id }}">
                    {% if section.settings.video_url.id %}
                        {%- if section.settings.video_url.type == 'youtube' -%}
                            <iframe src="https://www.youtube.com/embed/{{ section.settings.video_url.id }}?enablejsapi=1" class="js-youtube" allow="autoplay; encrypted-media" allowfullscreen loading="lazy"></iframe>
                        {%- else -%}
                            <iframe src="https://player.vimeo.com/video/{{ section.settings.video_url.id }}" class="js-vimeo" allow="autoplay; encrypted-media" allowfullscreen loading="lazy"></iframe>
                        {%- endif -%}
                    {% else %}
                        <video src="{{ section.settings.videosource }}" type="video/mp4" loop autoplay muted controls></video>
                    {% endif %}

                </deferred-media>

            </div>
        </div>
    </div>
</div>
<script>
    const video = document.querySelector("video");
    let playState = null;
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (!entry.isIntersecting) {
          video.pause();
          playState = false;
        } else {
          video.play();
          playState = true;
        }
      });
    }, {});
    observer.observe(video);
    const onVisibilityChange = () => {
      if (document.hidden || !playState) {
        video.pause();
      } else {
        video.play();
      }
    };
    document.addEventListener("visibilitychange", onVisibilityChange);
</script>
{%- style -%}
.video-text-{{ section.id }}{
    text-align: {{ section.settings.Horizontal_alignment }};
}
@media (max-width: 575px){
    .video-text-{{ section.id }}{
        text-align: {{ section.settings.mobile_alignment }};
    }  
    .wbvidewithtxt .video-text-{{ section.id }}{
        padding: 15px;
    }
}
.section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
}
@media screen and (max-width: 991px) {
    .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
    }
}
{%- endstyle -%}
